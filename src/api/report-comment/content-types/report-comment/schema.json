{
  "kind": "collectionType",
  "collectionName": "report_comments",
  "info": {
    "singularName": "report-comment",
    "pluralName": "report-comments",
    "displayName": "Report Comment"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "report_document_id": {
      "type": "string",
      "required": true
    },
    "field_path": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "text",
      "required": true
    },
    "user_id": {
      "type": "integer",
      "required": true
    },
    "user_name": {
      "type": "string",
      "required": true
    },
    "user_type": {
      "type": "enumeration",
      "enum": ["user", "model", "head_pm"],
      "default": "user"
    },
    "mentions": {
      "type": "json",
      "default": []
    },
    "is_resolved": {
      "type": "boolean",
      "default": false
    },
    "resolved_by": {
      "type": "integer"
    },
    "resolved_at": {
      "type": "datetime"
    },
    "parent_comment_id": {
      "type": "integer"
    }
  }
}
